@{
    var culture = Convert.ToString(ViewData["Culture"]) ?? "en";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OSUSHI.APP</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-0evHe/X+R7YkIZDRvuzKMRqM+OrBnVFBL6DOitfPri4tjfHxaWutUpFmBp4vmVor" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navigation-side.css" />
    <script src="https://kit.fontawesome.com/f1210da087.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/js-cookie@3.0.1/dist/js.cookie.min.js"></script>
</head>
<body>
    <div class="wrapper">

        <!-- Sidebar  -->
        <nav id="sidebar" class="bg-secondary-color">
            
            <button type="button" id="sidebarCollapse" class="btn btn-secondary bg-primary-rr border-0"
                    style="position:relative; top:10px; right:-17px; float:right">
                <i class="fa-solid fa-arrow-left fa-fw" id="leftArrow"></i>
                <i class="fa-solid fa-arrow-right fa-fw visually-hidden" id="rightArrow"></i>
            </button>
            <div class="sidebar-header">
                <h3 class="nav-logo text-center">
                    <i class="fa-light fa-sushi fa-fw" style="font-size:3em"></i>
                </h3>
                <strong class="nav-logo text-center" style="font-size:1em;">
                    <i class="fa-light fa-sushi fa-fw" style="font-size:1.5em"></i>
                </strong>
            </div>

            <script>
                if(Cookies.get('nav') === "open"){
                    $('#sidebar').removeClass('active');
                    $('#sidebar').addClass('active');
                    $("#rightArrow").removeClass("visually-hidden");
                    $("#leftArrow").removeClass("visually-hidden");
                    $("#leftArrow").addClass("visually-hidden");
                    Cookies.set('nav', 'open', { expires: 30 });
                }
                else{
                    $('#sidebar').removeClass('active');
                    $("#leftArrow").removeClass("visually-hidden");
                    $("#rightArrow").removeClass("visually-hidden");
                    $("#rightArrow").addClass("visually-hidden");
                    Cookies.set('nav', 'close', { expires: 30 });
                }
            </script>

            @if (culture == "ja")
            {
                <ul class="list-unstyled components">
                    <li class="">
                        <a href="#homeSubmenu" data-bs-toggle="collapse" aria-expanded="false" class="dropdown-toggle">
                            <i class="fa-solid fa-house fa-fw"></i>
                            AAAAA
                        </a>
                        <ul class="collapse list-unstyled" id="homeSubmenu">
                            <li>
                                <a href="/ja/usr">ダッシュボード</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/rfm">RFM</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/histogram">ヒスグラム</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/abcl">ABCL</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/combination">併売</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/switching">スイッチング</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/tryrepeat">トライ、リピート</a>
                            </li>
                            <li>
                                <a href="/ja/analytics/repeat">リピート</a>
                            </li>
                        </ul>
                    </li>
                    <li class="">
                        <a href="/ja/customers">
                            <i class="fa-solid fa-users fa-fw"></i>
                            お客様
                        </a>
                    </li>
                    <li class="">
                        <a href="/ja/stores">
                            <i class="fa-solid fa-store fa-fw"></i>
                            店舗
                        </a>
                    </li>

                    <li class="">
                        <a href="/ja/receipts">
                            <i class="fa-solid fa-receipt fa-fw"></i>
                            レシート
                        </a>
                    </li>
                    <li class="">
                        <a href="/ja/terminals">
                            <i class="fa-solid fa-computer fa-fw"></i>
                            端末
                        </a>
                    </li>
                    <li class="">
                        <a href="/ja/staffs">
                            <i class="fa-solid fa-id-card-clip fa-fw"></i>
                            スタッフ
                        </a>
                    </li>

                    <li class="">
                        <a href="/ja/settings">
                            <i class="fa-solid fa-gears fa-fw"></i>
                            設定
                        </a>
                    </li>
                    <li class="">
                        <a href="/ja/helps">
                            <i class="fa-solid fa-book fa-fw"></i>
                            ヘルプ
                        </a>
                    </li>
                </ul>
            }
            else
            {
                <ul class="list-unstyled components">
                    <li class="">
                        <a href="/en/usr">
                            <i class="fa-light fa-house-chimney fa-fw"></i>
                            Home
                        </a>
                    </li>

                    <li class="">
                        <a href="/en/tasks">
                            <i class="fa-light fa-list-check fa-fw"></i>
                            Tasks
                        </a>
                    </li>
                    <li class="">
                        <a href="/en/board">
                            <i class="fa-light fa-grid fa-fw"></i>
                            Board
                        </a>
                    </li>
                    <li class="">
                        <a href="/en/gunt">
                            <i class="fa-light fa-chart-bullet fa-fw"></i>
                            Gunt
                        </a>
                    </li>
                    <li class="">
                        <a href="/en/wiki">
                            <i class="fa-light fa-file-lines fa-fw"></i>
                            Wiki
                        </a>
                    </li>
                    <li class="">
                        <a href="/en/files">
                            <i class="fa-light fa-folder-tree fa-fw"></i>
                            File
                        </a>
                    </li>
                    <li class="">
                        <a href="/en/settings">
                            <i class="fa-light fa-gear fa-fw"></i>
                            Settings
                        </a>
                    </li>
                    <li class="">
                        <a href="/en/helps">
                            <i class="fa-light fa-comments-question fa-fw"></i>
                            Help
                        </a>
                    </li>
                </ul>
            }

        </nav>
        <div id="content" class="bg-ligher-color">

            @RenderBody()

        </div>
    </div>

    @await RenderSectionAsync("Scripts", required: false)
    <script>
        $(document).ready(function() {

          
            $('#sidebarCollapse').on('click', function() {
                if ($("#rightArrow").hasClass("visually-hidden")) {

                    $('#sidebar').removeClass('active');
                    $('#sidebar').addClass('active');
                    $("#rightArrow").removeClass("visually-hidden");
                    $("#leftArrow").removeClass("visually-hidden");
                    $("#leftArrow").addClass("visually-hidden");
                    Cookies.set('nav', 'open', { expires: 30 });

                } else {

                    $('#sidebar').removeClass('active');
                    $("#leftArrow").removeClass("visually-hidden");
                    $("#rightArrow").removeClass("visually-hidden");
                    $("#rightArrow").addClass("visually-hidden");
                    Cookies.set('nav', 'close', { expires: 30 });
                }
            });
        });
    </script>
</body>
</html>
